
  <section>
    <div class="container"> 
        <div class="">
            <a href="/admin/add-product" class="btn btn-success mt-5">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead> 
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Discription</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}} </td>
                    <td>{{this.description}} </td>
                    <td>{{this.price}}</td>
                    {{!-- <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px; height: 50px;"></td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>